@model st10384480AgriConnect.Models.User

@{
    ViewData["Title"] = "Add Farmer";
}

<h2 class="mb-4 text-success">Add New Farmer</h2>

<form asp-action="AddFarmer" method="post" class="border p-4 rounded bg-white shadow-sm">
    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" placeholder="Enter full name" required />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" placeholder="Enter email" required />
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
    </div>

    <input type="hidden" asp-for="Role" value="Farmer" />

    <button type="submit" class="btn btn-success">Add Farmer</button>
</form>