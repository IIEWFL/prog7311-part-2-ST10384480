@model st10384480AgriConnect.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<form asp-action="Register" method="post" class="form-control p-4 bg-white shadow-sm">
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="Role" class="form-select" required>
            <option value="">Select Role</option>
            <option value="Farmer">Farmer</option>
            <option value="Employee">Employee</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Register</button>
    <p class="text-danger mt-2">@ViewBag.Error</p>
</form>