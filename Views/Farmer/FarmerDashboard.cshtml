@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var email = ViewBag.Email as string;
}

<div class="card shadow-sm p-4 bg-white">
    <h2 class="mb-4">Farmer Dashboard</h2>
    <p class="text-muted">Welcome, <strong>@email</strong></p>

    <div class="list-group">
        <a asp-action="AddProduct" asp-route-email="@email" class="list-group-item list-group-item-action">
            Add New Product
        </a>
        <a asp-action="MyProducts" asp-route-email="@email" class="list-group-item list-group-item-action">
            View My Products
        </a>
    </div>
</div>